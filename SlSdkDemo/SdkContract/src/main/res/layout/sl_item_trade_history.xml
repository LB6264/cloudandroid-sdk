<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/sl_colorDefault">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/sl_colorDefaultDark">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/sl_grayText"
            android:text="@string/sl_str_time2"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_direction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/sl_grayText"
            android:text="@string/sl_str_direction"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/sl_grayText"
            android:text="@string/sl_str_price"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:textColor="@color/sl_grayText"
            android:text="@string/sl_str_volume"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/sl_colorDefault">

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/sl_whiteText"
            android:text=""
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_direction_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/sl_whiteText"
            android:text=""
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_price_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/sl_whiteText"
            android:text=""
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_volume_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:textColor="@color/sl_whiteText"
            android:text=""
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sl_colorDefaultDark"
        />

</LinearLayout>