<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/sl_colorDefault">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sl_colorDefaultDark"
        />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/sl_icon_sorting"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_contract_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/sl_whiteText"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_stock_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/tv_contract_name"
            android:background="@drawable/sl_border_corner_blue"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/sl_colorTextSelector"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_contract_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contract_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/sl_grayText"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_contract_chg"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/sl_colorWhite"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/tv_contract_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/tv_contract_chg"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/sl_grayText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_contract_current_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contract_current"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/tv_contract_chg"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/sl_grayText"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>